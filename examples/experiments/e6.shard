# word_count.shard
source cluster_setup.shard
cluster -t data_parallel
source -l random_crash.shard
crashpercent=$1
cat input.txt |
    tr '[:upper:]' '[:lower:]' |
    tr -cs '[:alnum:]' '\n' |
    (source -r random_crash.shard; echo $in | cut -c1;
     echo $in | wc -c)@@map/testcluster |
    (source -r random_crash.shard; awk '{total += $1}
          END {if (NR > 0) print total/NR}')@@reduce/testcluster |
    sort -t, -nk2 -r